module FoodJunkie
  module Parsers
    grammar Ingredient
      include Primitive
      include Measurement
      include CookStep

      rule ingredient
        measurement:(compound / portion_volume / volume) (space 'of')? (space preparation)? (space relative_temperature)? space substance:(!((space preposition space) / (space conjunction space) / terminal) .)+ <FoodJunkie::SyntaxNodes::Ingredient>
      end

      rule terminal
        line_break+ / terminators
      end

    end
  end
end
