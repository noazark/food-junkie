module FoodJunkie
  grammar Ingredients
    include Primitives
    include Measurements
    include CookSteps

    rule ingredient
      measurement:(compound / portion_volume / volume) (space 'of')? (space preparation)? (space relative_temperature)? space substance:(!((space preposition space) / (space conjunction space) / terminal) .)+ <FoodJunkie::Ingredient>
    end

    rule terminal
      line_break+ / terminators
    end

  end
end
